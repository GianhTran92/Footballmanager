<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/recycler.item.content.margin"
    android:background="@drawable/custom_shape">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circleImgViewAvatar"
        android:layout_width="@dimen/recycler.item.league.logo.size"
        android:layout_height="@dimen/recycler.item.league.logo.size"
        android:layout_margin="@dimen/recycler.item.content.margin"
        android:src="@drawable/img_messi"
        app:civ_border_color="@android:color/background_light"
        app:civ_border_width="@dimen/recycler.item.league.logo.border" />
    <RelativeLayout
        android:id="@+id/rlPlayerContentInfor"
        android:layout_toRightOf="@+id/circleImgViewAvatar"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:background="@drawable/custom_shape_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPlayerName"
            android:text="Leonal Messi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvPlayerOld"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvPlayerName"
            android:text="24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvPlayerPosition"
            android:text="Centre Forward"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_red_light"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgViewPlayerDetail"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dialog.new.league.content.padding"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgViewPlayerDetail"
            android:src="@drawable/ico_next_hd"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
