<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circleImgViewLeagueLogo"
        android:layout_width="@dimen/recycler.league.logo.size"
        android:layout_height="@dimen/recycler.league.logo.size"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_league"
        android:layout_marginTop="@dimen/dialog.img.view.logo.magin"
        app:civ_border_color="@android:color/holo_orange_dark"
        app:civ_border_width="@dimen/recycler.item.league.logo.border" />
    <RelativeLayout
        android:id="@+id/llContentNewLeague"
        android:layout_below="@+id/circleImgViewLeagueLogo"
        android:layout_marginBottom="@dimen/dialog.img.view.logo.magin"
        android:layout_marginTop="@dimen/recycler.item.content.margin"
        android:background="@drawable/custom_shape"
        android:padding="@dimen/dialog.new.league.content.padding"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvAddLeagueName"
            android:text="@string/text.view.league.name"
            android:textColor="@android:color/background_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edtLeagueName"
            android:inputType="text"
            android:layout_marginTop="@dimen/dialog.new.league.content.padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnSubmitAddLeague"
            android:text="@string/button.submit"
            android:background="@drawable/custom_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edtLeagueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnCancelAddLeague"
            android:text="@string/button.cancel"
            android:background="@drawable/custom_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/edtLeagueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>
