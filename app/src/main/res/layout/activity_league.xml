<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.asiantech.intership.footballdemo.ui.league.LeagueActivity">
    <RelativeLayout
        android:id="@+id/rlLeagueTop"
        android:background="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgViewSet1Line"
            android:src="@drawable/ic_reorder_black_24dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/hello_world"
            android:layout_margin="@dimen/recycler.item.content.margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgViewSet3Line"
            android:src="@drawable/ic_view_module_black_24dp"
            android:layout_margin="@dimen/recycler.item.content.margin"
            android:contentDescription="@string/hello_world"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewLeague"
        android:layout_below="@+id/rlLeagueTop"
        android:layout_marginTop="@dimen/recycler.item.content.margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imgViewAddLeague"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/hello_world"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/activity.button.add.new.league.margin"
        android:layout_marginBottom="@dimen/activity.button.add.new.league.margin"
        android:src="@drawable/ic_add_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
